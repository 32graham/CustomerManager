<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style
        TargetType="{x:Type Label}">
        <Setter
            Property="Margin"
            Value="5,5,5,-3" />
        <Setter
            Property="Padding"
            Value="0" />
    </Style>
    
    <Style
        TargetType="{x:Type TextBox}">
        <Setter
            Property="Margin"
            Value="5" />
    </Style>

    <Style
        TargetType="{x:Type TextBlock}">
        <Setter
            Property="Margin"
            Value="5" />
    </Style>

</ResourceDictionary>